<?xml version="1.0"?>
<odoo>
	<data>
		<!-- ini definisi form session-->
		<record id="session_form" model="ir.ui.view">
			<field name="name">session_form</field>
			<field name="model">academic.session</field>

			<field name="arch" type="xml">
				<form string="Session Form" version="11.00">
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Session Name" />
							<h1>
								<field name="name" />
							</h1>
						</div>

						<group>
							<group>
								<field name="course_id" />
								<field name="instructor_id" />
								<field name="start_date" />
							</group>
							<group>
								<field name="duration" />
								<field name="seats" />
								<field name="active" />
							</group>
						</group>

						<notebook>
							<page string="Description">
								<field name="description" />
							</page>
						</notebook>
					</sheet>
				</form>

			</field>

		</record>

		<!-- ini definisi tree attendee-->
		<record id="attendee_list" model="ir.ui.view">
			<field name="name">attendee_list</field>
			<field name="model">academic.attendee</field>

			<field name="arch" type="xml">
				<tree string="Attendee List">
					<field name="name" />
					<field name="partner_id" />
					<field name="session_id" />
				</tree>
			</field>

		</record>
	</data>
</odoo>
